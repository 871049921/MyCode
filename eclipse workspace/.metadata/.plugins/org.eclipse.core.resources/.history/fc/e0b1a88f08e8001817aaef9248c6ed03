	// 产生随机的节目表
	public void setRandomShowList() {
		ArrayList<String> list = new ArrayList<String>();
		list.add("show prepare");
		int i = 1;
		while (i < 20) {
			switch (i % 3) {
			case 1:
				setRandomFishShow();
				break;
			case 2:
				setRandomMammalShow();
				break;
			case 3:
				setRandomReptileShow();
				break;
			}
			i++;
		}
		setMermaidShow();
	}

	// 随机产生鱼类演出
	private String setRandomFishShow() {
		int i = (int) (Math.random() * 3);
		Collections.shuffle(names);
		switch (i) {
		case 1:
			FlyingFishShow flyingFishShow = new FlyingFishShow();
			return "FlyingFish";
		case 2:
			SharkShow shark = new SharkShow();
			return "Shark";
		case 3:
			ClownFishShow clownFish = new ClownFishShow(10000 + numberOfFish);
			return "ClownFish";
		}
		return null;
	}

