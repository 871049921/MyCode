
public class Rain1 extends Rain {
	
	public Rain1() {
		super();
	}
	
	public Rain1(int heavy) {
		super(heavy);
	}
	
	@Override
	public int getHeavy() {
		return heavy;
	}

	@Override
	public void setHeavy(int heavy) {
		this.heavy = heavy;

	}
	
	@Override
	public void heavyUp() {
		if (heavy < 5) {
			heavy ++;
		}
	}
	
	@Override
	public void heavyDown() {
		if (heavy > 1) {
			heavy --;
		}
	}

}
