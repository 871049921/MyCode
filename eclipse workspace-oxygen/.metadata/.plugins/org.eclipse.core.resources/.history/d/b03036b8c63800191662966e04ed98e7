import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.HBox;
import javafx.scene.layout.StackPane;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class Main extends Application{
	
	public static void main(String[] args) {
		Application.launch(args);
	}
	
	@Override
	public void start(Stage primaryStage) {
		StackPane stackPane = new StackPane();
		
		Button btOpen = new Button("打开");
		btOpen.setMinWidth(250);
		Button btModify = new Button("修改");
		btModify.setMinWidth(250);
		Button btClose = new Button("关闭");
		HBox hbMainButton = new HBox();
		hbMainButton.getChildren().addAll(btOpen, btModify);
		
		stackPane.getChildren().add(hbMainButton);
		
		Scene scene = new Scene(stackPane, 500, 1000);
		primaryStage.setTitle("xml编辑器");
		primaryStage.setScene(scene);
		primaryStage.setResizable(false);
		primaryStage.show();
	}
}
